{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@blitz-basic-script/api-interfaces": [
        "libs/api-interfaces/src/index.ts"
      ],
      "@blitz-basic-script/ide": ["libs/ide/src/index.ts"],
      "@blitz-basic-script/blog": ["libs/blog/src/index.ts"],
      "@blitz-basic-script/coding": ["libs/coding/src/index.ts"],
      "@blitz-basic-script/documentation": ["libs/documentation/src/index.ts"],
      "@blitz-basic-script/project": ["libs/project/src/index.ts"],
      "@blitz-basic-script/authentication": [
        "libs/authentication/src/index.ts"
      ],
      "@blitz-basic-script/script-language": [
        "libs/script-language/src/index.ts"
      ],
      "@blitz-basic-script/game": ["libs/game/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
